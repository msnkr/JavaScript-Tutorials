<body>
  <div class="container-2">
    <h4>
      Select the activities you would like to try and we'll match them with the
      locations we offer
    </h4>
    <% activities.forEach(activity => { %>
      <div class="activity">
        <label for="<%= activity %>"><%= activity %></label>
        <input type="checkbox" name="options" id="<%= activity %>">
      </div>
    <% }) %>
    <button class="btn calc-btn" type="submit">Search</button>
</body>
